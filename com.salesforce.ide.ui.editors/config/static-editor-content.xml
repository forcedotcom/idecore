<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
	<description>Content assist configuration for the editors.</description>
	<!--
		See
		https://sites.google.com/a/salesforce.com/ide/Home/development/how-to-upgrade-apex-code-at-beginning-of-each-release
	-->

	<!--   E D I T O R    C O N T E N T  -->
	<!--
		most apex code content assistance is loaded via config/apexModel.xml.
		The model file is derived from
		sfdc-test/func/results/Apex/testAllSystemTypes.xml which contains type
		name (class/object name), method name, return type, and, some times, a
		description. The section below is from the "System.Trigger" type.
		Instead of parsing and loading this section we explicitly add the
		methods including what "System.Trigger" doesn't include - the return
		type and a description from the Apex Code developer guide.
	-->
	<util:list id="triggerContextVariables" list-class="java.util.ArrayList">
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isExecuting" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if the current context for the Apex script is a trigger, not a Visualforce page, a Web service, or an executeAnonymous call." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isInsert" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired due to an INSERT operation." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isUpdate" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired due to an UPDATE operation." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isDelete" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired due to a DELETE operation." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isBefore" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired before any record was saved." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isAfter" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired after all records were saved." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="isUnDelete" />
			<constructor-arg value="boolean" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns true if this trigger was fired after a record is recovered from the Recycle Bin (that is, after an UNDELETE operation)." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="new" />
			<constructor-arg value="List:SObject" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns a list of the new versions of the sObject records." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="newMap" />
			<constructor-arg value="Map:Id, SObject" />
			<constructor-arg value="true" />
			<constructor-arg
				value="A map of IDs to the new versions of the sObject records." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="old" />
			<constructor-arg value="List:SObject" />
			<constructor-arg value="true" />
			<constructor-arg
				value="Returns a list of the old versions of the sObject records." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="oldMap" />
			<constructor-arg value="Map:Id, SObject" />
			<constructor-arg value="true" />
			<constructor-arg
				value="A map of IDs to the old versions of the sObject records." />
		</bean>
		<bean class="com.salesforce.ide.ui.editors.apex.assistance.ApexMethod">
			<constructor-arg value="Trigger" />
			<constructor-arg value="size" />
			<constructor-arg value="Integer" />
			<constructor-arg value="true" />
			<constructor-arg
				value="The total number of records in a trigger invocation, both old and new." />
		</bean>
	</util:list>

